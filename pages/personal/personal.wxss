page{
  background-color: #F0F8FF;
  padding: 0rpx;
  margin: 0rpx;
}

.personal-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.personal-container .bg-container{
  width: 100%;
  height: 550rpx;
}

.bg-image image{
  width: 100%;
  height: 400rpx;
}
.bg-container .user-info{
  width: 100%;
  height: 150rpx;
  background: #FFE7BA;
  margin-top: -10rpx;
  display: flex;
  flex-direction: row;
}

.bg-container .user-image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 80rpx;
  z-index: 10;
  position: absolute;
  margin-top: -90rpx;
  margin-left: 50rpx;
  border-style:solid;
  border-width:8rpx;
  border-color: white;
}

.user-info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 35rpx;
  color: grey;
}

.user-info .user-name{
  margin-top: 80rpx;
}


.content-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.message{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
  margin-top: 15rpx;
}

.content-item{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
}

.item-image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

.word{
  font-size: 30rpx;
  margin-left: 30rpx;
  color: gray;
}

.content-container{
  width: 100%;
  background: white;
  margin-top: 15rpx;
}

.content-container .say-love{
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #EEE9E9;
}

.content-container .sale{
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #EEE9E9;
}

.suggestion{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
  margin-top: 15rpx;
}

